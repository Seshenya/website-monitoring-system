# Example .env file for Website Monitoring System

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/monitoring_system

# Port for the backend server
PORT=3000

# Display name for outgoing emails
SENDER_NAME="Your Website Monitoring Team"

# Email address used as the sender
SENDGRID_SENDER_EMAIL=notifications@gmail.com

# SendGrid API key (required for sending email notifications)
SENDGRID_API_KEY=

# Model to use for Groq (default: llama-3.3-70b-versatile)
GROQ_MODEL=llama-3.3-70b-versatile

# Groq API key (required for LLM answer generation)
GROQ_API_KEY=